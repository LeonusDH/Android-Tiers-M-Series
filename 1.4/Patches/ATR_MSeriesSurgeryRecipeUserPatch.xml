<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Add the MSeries units to the mechanical surgery abstract class so it gets all appropriate mechanical surgeries -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/RecipeDef[@Name="ATR_surgeryMechanical"]/recipeUsers</xpath>
		<value>
            <li>ATM_Mark1Warrior</li>
            <li>ATM_Mark2Bishop</li>
            <li>ATM_Mark3Paladin</li>
		</value>
	</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="ATR_ChargingPodBase">
	    <defName>ATM_ChargingPodMech</defName>
        <label>Mech pod</label>
        <description>An extremely large charging pod capable of storing the bulk of a war mech that can not fit in any smaller pod. Amusingly, smaller units can still use this to charge even though it dwarfs them in size.</description>
        <graphicData>
            <drawSize>(3,6)</drawSize>
        </graphicData>
        <size>(1,2)</size>
        <costList>
            <Steel>250</Steel>
            <Silver>150</Silver>
            <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
	    <comps>
	        <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>30</basePowerConsumption>
	        </li>
        </comps>
    </ThingDef>

</Defs>